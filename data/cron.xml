<odoo>
    <record id="cron_actualizar_indicador" model="ir.cron">
        <field name="name">Actualizar Indicador Diariamente</field>
        <field name="model_id" ref="mi_modulo.model_mi_modulo_indicador"/>
        <field name="state">code</field>
        <field name="code">model.actualizar_indicador()</field>
        <field name="active" eval="True"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
</odoo>